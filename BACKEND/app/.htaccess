<IfModule mod_rewrite.c>
    RewriteEngine On

    # 1. Configuración de CORS a nivel de Servidor (Apache)
    # Esto asegura que incluso si PHP falla, las cabeceras se envíen.
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"

    # 2. Manejo de solicitudes OPTIONS (Preflight)
    # Si el navegador pregunta "¿Puedo conectarme?", Apache responde "SÍ" inmediatamente (200 OK)
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]

    # 3. Enrutamiento normal de CodeIgniter
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([\s\S]*)$ index.php/$1 [L,NC,QSA]
</IfModule>

<IfModule !mod_rewrite.c>
    # Si mod_rewrite falla, intentamos manejarlo aquí
    ErrorDocument 404 /index.php
</IfModule>